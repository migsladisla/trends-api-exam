extends layout

block content
  body.page-grid(style="color: #444444; text-align: left")
  div.page-grid-col
  h1.content-title(style="padding: 1em 1em; letter-spacing: 2px" data-aos="zoom-in")= title
    i.fas.fa-user(style="margin-left: 12px; color: #1da1f2" data-aos="fade-left" data-aos-duration="800")
    i.fas.fa-align-right(style="margin-left: 12px; color: #1da1f2" data-aos="fade-left" data-aos-duration="800")
    p(style="padding: 0; font-size: 0.4em; letter-spacing: normal") Fetched from <a class="ahref" target="_blank" href="https://jsonplaceholder.typicode.com/posts">https://jsonplaceholder.typicode.com/posts?userId=:id</a>
  ul
    each post, i in userPosts
      div.board(data-aos="fade-up" data-aos-duration="800")
        div.card-content
          h3(style="padding-top: 5px")= `Post ${post.id}: ${post.title}`
          hr
          p= post.body
          h3(style="padding: 0; padding-top: 10px").card-title: a.btn-view(href='/posts/' + post.id + '/comments') View comments <i class="fas fa-arrow-right"></i>

  footer(style="background: #f3f3f3")#main-footer
    div Copyright &copy; Juan Miguel Ladisla 
    div Trends and Technologies Inc.
    div(style="font-size: 0.8em; margin-top: 1em") Made with 
      i.fab.fa-node-js(style="color: #68a063; font-size: 1.5em")
    div(style="font-size: 0.8em") ExpressJS and CSS3